<div class="top">
  <h1>My tasks</h1>
  ✏️ <%= link_to "Edit task", edit_path %>
  ❌ <%= link_to "Delete", delete_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
</div>


<div class="text">
  <label>- <%= @tasks.title %>
  <input type="checkbox">
  <span class="checkmark"></span>
</label>
</div>

<div class="details">
  <p><%= @tasks.details %></p>
</div>

<hr>
<br>
<div class="link-to">
  <%= link_to "📖 View all tasks", tasks_path %>
</div>
